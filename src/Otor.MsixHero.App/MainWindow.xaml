<fw:AcrylicWindow x:Class="Otor.MsixHero.App.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        WindowStyle="None"
        xmlns:fw="clr-namespace:SourceChord.FluentWPF;assembly=FluentWPF"
        AcrylicWindowStyle="NoIcon"
        ExtendViewIntoTitleBar="True"
        xmlns:regions="http://prismlibrary.com/"
        xmlns:modules="clr-namespace:Otor.MsixHero.App.Modules"
        xmlns:commands="clr-namespace:Otor.MsixHero.App.Mvvm.Commands"
        xmlns:hero="clr-namespace:Otor.MsixHero.App.Hero"
        mc:Ignorable="d"
        TintOpacity="0.2"
        Margin="0"
        Padding="0"
        TintColor="#0173C7"
        Title="MainWindow" Height="800" Width="1024">

    <Grid
        Margin="0">
        <Border
            Margin="0"
            Padding="0" Height="54" Background="Transparent" MouseDown="UIElement_OnMouseDown" MouseLeftButtonDown="UIElement_OnMouseLeftButtonDown" VerticalAlignment="Top" />
        <ContentControl
            Margin="0"
            Padding="0" regions:RegionManager.RegionName="{x:Static modules:RegionNames.Root}" />

    </Grid>
</fw:AcrylicWindow>
