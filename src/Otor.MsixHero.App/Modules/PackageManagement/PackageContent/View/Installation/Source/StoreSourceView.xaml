<UserControl x:Class="Otor.MsixHero.App.Modules.PackageManagement.PackageContent.View.Installation.Source.StoreSourceView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:localization="clr-namespace:Otor.MsixHero.App.Localization"
             xmlns:cards="clr-namespace:Otor.MsixHero.App.Controls.Cards"
             mc:Ignorable="d" 
             d:DesignHeight="200" d:DesignWidth="600">
    <cards:Card>
        <cards:Card.Header>
            <HeaderedContentControl
                Header="{localization:Loc PackageExpert_InstalledFromHeader}"
                Content="{localization:Loc PackageExpert_MsStore}"
                Style="{StaticResource CardHeader}" />
        </cards:Card.Header>
    </cards:Card>
</UserControl>
