<UserControl x:Class="Otor.MsixHero.App.Modules.Main.Toolbar.Views.ToolbarView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mvvm="http://prismlibrary.com/"
             xmlns:modules="clr-namespace:Otor.MsixHero.App.Modules"
             mvvm:ViewModelLocator.AutoWireViewModel="True"
             mc:Ignorable="d" 
             d:DesignHeight="58" d:DesignWidth="800">
    <DockPanel>
        <Border Background="#0173C7" Height="58" Width="60" DockPanel.Dock="Left">
            <Path Fill="White" Width="16" Height="16" Data="M 1 2 L 1 3 L 14 3 L 14 2 Z M 1 7 L 1 8 L 14 8 L 14 7 Z M 1 12 L 1 13 L 14 13 L 14 12 Z" />
        </Border>

        <ContentControl 
            x:Name="Region"
            VerticalAlignment="Stretch"
            mvvm:RegionManager.RegionName="{x:Static modules:RegionNames.Search}" />

        <TextBlock VerticalAlignment="Center" HorizontalAlignment="Center" Text="{Binding Title}" />
    </DockPanel>
    
</UserControl>
