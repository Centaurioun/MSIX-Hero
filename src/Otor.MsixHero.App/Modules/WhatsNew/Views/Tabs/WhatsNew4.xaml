<UserControl x:Class="Otor.MsixHero.App.Modules.WhatsNew.Views.Tabs.WhatsNew4"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Otor.MsixHero.App.Modules.WhatsNew.Views.Tabs"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="960">

    <Viewbox HorizontalAlignment="Left" VerticalAlignment="Top" Stretch="Uniform" MaxWidth="960">
        <DockPanel Width="960" VerticalAlignment="Top" HorizontalAlignment="Center" MinWidth="960">

            <Label DockPanel.Dock="Top" Style="{StaticResource Label}">Overhaul of the event viewer</Label>
            <TextBlock DockPanel.Dock="Top" Text="The new event viewer shows even more useful information plus it received filtering and grouping options." TextWrapping="Wrap" />
            <Image Source="whatsnew2.0c.png" Stretch="None" DockPanel.Dock="Top" Margin="0 10 0 0" />
        </DockPanel>
    </Viewbox>
</UserControl>
