<UserControl x:Class="Otor.MsixHero.App.Controls.PackageExpert.Views.ActionBar"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:controls="clr-namespace:Otor.MsixHero.App.Controls"
             mc:Ignorable="d" >
    <Border DockPanel.Dock="Top" Background="White" BorderBrush="#E0E0E0" BorderThickness="0 0 0 1">
        <WrapPanel VerticalAlignment="Center" HorizontalAlignment="Left">
            <ToggleButton 
                x:Name="ToggleButtonStart"
                Style="{StaticResource ActionPopupToggleButton}">
                <controls:LabelWithIcon 
                            Style="{StaticResource ActionLabelWithIcon}"
                            Icon16x16="M 3 0.875 L 3 14.203125 L 3.769531 13.714844 L 13.425781 7.539063 Z M 4 2.699219 L 11.574219 7.539063 L 4 12.375 Z"
                            Content="Start" />
            </ToggleButton>

            <Popup 
                StaysOpen="False"
                PlacementTarget="{Binding ElementName=ToggleButtonStart}"
                Placement="Bottom"
                AllowsTransparency="True" IsOpen="{Binding ElementName=ToggleButtonStart, Path=IsChecked}">

                <Border Padding="0 0 18 18">
                    <Border Background="White" BorderBrush="#ccc" BorderThickness="1">
                        <Border.Effect>
                            <DropShadowEffect BlurRadius="18" Color="#33777777" ShadowDepth="1" Direction="90" />
                        </Border.Effect>
                        <StackPanel>
                            <TextBlock Text="Main application" Margin="0 0 0 10" />

                            <Border Width="64" Height="64" Background="BlueViolet" Margin="0 0 0 10">
                                <Image Source="{StaticResource DummyLogo}" />
                            </Border>

                            <TextBlock Text="Other application" Margin="0 20 0 10"/> 

                            <Border Width="64" Height="64" Background="BlueViolet" Margin="0 0 0 10">
                                <Image Source="{StaticResource DummyLogo}" />
                            </Border>

                            <Border Width="64" Height="64" Background="BlueViolet" Margin="0 0 0 10">
                                <Image Source="{StaticResource DummyLogo}" />
                            </Border>

                            <Border Width="64" Height="64" Background="BlueViolet" Margin="0 0 0 10">
                                <Image Source="{StaticResource DummyLogo}" />
                            </Border>


                            <TextBlock Text="Custom tools" Margin="0 20 0 10" />
                        </StackPanel>
                    </Border>
                </Border>
            </Popup>

            <ToggleButton Style="{StaticResource ActionPopupToggleButton}">
                <controls:LabelWithIcon 
                            Style="{StaticResource ActionLabelWithIcon}"
                            Icon16x16="M 2.5 2 C 1.675781 2 1 2.675781 1 3.5 L 1 12.5 C 1 13.324219 1.675781 14 2.5 14 L 13.5 14 C 14.324219 14 15 13.324219 15 12.5 L 15 5.5 C 15 4.675781 14.324219 4 13.5 4 L 6.796875 4 L 6.144531 2.789063 C 5.882813 2.300781 5.375 2 4.824219 2 Z M 2.5 3 L 4.824219 3 C 5.007813 3 5.175781 3.101563 5.265625 3.261719 L 6.203125 5 L 13.5 5 C 13.78125 5 14 5.21875 14 5.5 L 14 7 L 5.21875 7 C 4.578125 7 4 7.414063 3.796875 8.023438 L 2.179688 12.878906 C 2.070313 12.789063 2 12.65625 2 12.5 L 2 3.5 C 2 3.21875 2.21875 3 2.5 3 Z M 5.21875 8 L 14 8 L 14 12.5 C 14 12.78125 13.78125 13 13.5 13 L 3.195313 13 L 4.746094 8.34375 C 4.816406 8.136719 5.003906 8 5.21875 8 Z"
                            Content="Open" />
            </ToggleButton>

            <Button Style="{StaticResource ActionButton}">
                <controls:LabelWithIcon 
                            Style="{StaticResource ActionLabelWithIcon}"
                            Icon16x16="M 2.5 2 C 1.675781 2 1 2.675781 1 3.5 L 1 12.5 C 1 13.324219 1.675781 14 2.5 14 L 8 14 L 8 13 L 2.5 13 C 2.21875 13 2 12.78125 2 12.5 L 2 5 L 13 5 L 13 8 L 14 8 L 14 3.5 C 14 2.675781 13.324219 2 12.5 2 Z M 2.5 3 L 12.5 3 C 12.78125 3 13 3.21875 13 3.5 L 13 4 L 2 4 L 2 3.5 C 2 3.21875 2.21875 3 2.5 3 Z M 9.851563 9.148438 L 9.148438 9.851563 L 11.792969 12.5 L 9.148438 15.144531 L 9.851563 15.855469 L 12.5 13.207031 L 15.144531 15.855469 L 15.855469 15.144531 L 13.207031 12.5 L 15.855469 9.851563 L 15.144531 9.148438 L 12.5 11.792969 Z"
                            Content="Uninstall" />
            </Button>

            <Button Style="{StaticResource ActionButton}">
                <controls:LabelWithIcon 
                            Style="{StaticResource ActionLabelWithIcon}"
                            Icon16x16="M 7.5 1.035156 C 3.917969 1.035156 1 3.941406 1 7.515625 L 1 8 L 2 8 L 2 7.515625 C 2 4.484375 4.457031 2.035156 7.5 2.035156 C 9.132813 2.035156 10.589844 2.75 11.59375 3.875 L 10.464844 5 L 14 5 L 14 1.476563 L 12.300781 3.167969 C 11.113281 1.863281 9.40625 1.035156 7.5 1.035156 Z M 13 7 L 13 7.5 C 13 10.542969 10.542969 13 7.5 13 C 5.859375 13 4.402344 12.277344 3.394531 11.140625 L 4.535156 10 L 1 10 L 1 13.535156 L 2.6875 11.847656 C 3.878906 13.164063 5.589844 14 7.5 14 C 11.085938 14 14 11.085938 14 7.5 L 14 7 Z"
                            Content="Check for updates" />
            </Button>
        </WrapPanel>
    </Border>
</UserControl>
