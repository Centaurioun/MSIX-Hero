                <Fluent:RibbonGroupBox Header="Navigation">
                    <Fluent:Button Header="Open in Explorer" Command="{x:Static commands:MsixHeroCommands.OpenExplorer}" CommandParameter="{Binding PackageList.SelectedPackage}">
                        <Fluent:Button.SizeDefinition>
                            <Fluent:RibbonControlSizeDefinition Large="Middle" Small="Middle" Middle="Middle" />
                        </Fluent:Button.SizeDefinition>
