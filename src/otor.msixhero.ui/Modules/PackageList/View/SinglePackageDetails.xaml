<UserControl x:Class="MSI_Hero.Modules.PackageList.View.SinglePackageDetails"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MSI_Hero.Modules.PackageList.View"
             xmlns:viewModel="clr-namespace:MSI_Hero.ViewModel"
             mc:Ignorable="d"  d:DataContext="{d:DesignInstance viewModel:PackageViewModel}"
             d:DesignHeight="450" d:DesignWidth="800">
    <StackPanel>
        <Label Style="{StaticResource Label}" Content="{Binding DisplayName}" />
        
        <Border Background="#2B579A" Width="64" Height="64" VerticalAlignment="Center" HorizontalAlignment="Left">
            <Image Source="{Binding Image}" VerticalAlignment="Center" HorizontalAlignment="Center" MaxWidth="48" MaxHeight="48" Stretch="Uniform" StretchDirection="DownOnly" />
        </Border>

        <StackPanel>
            <TextBlock TextWrapping="Wrap" Text="{Binding Description}" />
        </StackPanel>

        <StackPanel Margin="0 10 0 0">
            <TextBlock Text="Version" />
            <TextBlock Opacity="0.7" Text="{Binding Version}" TextWrapping="Wrap" />
        </StackPanel>

        <StackPanel Margin="0 10 0 0">
            <TextBlock Text="Publisher" />
            <TextBlock Opacity="0.7" Text="{Binding DisplayPublisherName}" TextWrapping="Wrap" />
        </StackPanel>

        <StackPanel Margin="0 10 0 0">
            <TextBlock Text="Subject" />
            <TextBlock Opacity="0.7" Text="{Binding Publisher}" TextWrapping="Wrap" />
        </StackPanel>

        <StackPanel Margin="0 10 0 0">
            <TextBlock Text="Family name" />
            <TextBlock Opacity="0.7" Text="{Binding Path=PackageFamilyName}" TextWrapping="Wrap" />
        </StackPanel>

        <StackPanel Margin="0 10 0 0">
            <TextBlock Text="Product ID" />
            <TextBlock Opacity="0.7" Text="{Binding Path=ProductId}" TextWrapping="Wrap" />
        </StackPanel>
    </StackPanel>
</UserControl>
