<UserControl 
    x:Name="root"
    x:Class="otor.msixhero.ui.Controls.UpdateNotification.UpdateNotificationControl"
     xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
     xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
     xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
     xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
     mc:Ignorable="d" 
     Height="48"
     d:DesignHeight="48" d:DesignWidth="800">
    <UserControl.Background>
        <SolidColorBrush Color="#FFFDE4" />
    </UserControl.Background>
    <DockPanel Margin="4 0">
        <Button DockPanel.Dock="Right" VerticalAlignment="Center" Content="Dismiss" Margin="4 0" Padding="8 2" Click="OnCloseClick" />
        <Button DockPanel.Dock="Right" VerticalAlignment="Center" Content="Show release notes" Margin="4 0" Click="OnShowReleaseNotesClick" Padding="8 2" />

        <TextBlock VerticalAlignment="Center" Margin="8 0" TextWrapping="Wrap">
            <Run Text="MSIX Hero has been updated to version" />
            <Run Text="{Binding ElementName=root, Path=CurrentVersion, FallbackValue='a new version'}" FontWeight="Bold" />
        </TextBlock>
    </DockPanel>
</UserControl>
