<UserControl x:Class="otor.msixhero.ui.Controls.MsixHeroText"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:otor.msixhero.ui.Controls"
             mc:Ignorable="d" >
    <StackPanel Margin="10">
        <Image Source="../Resources/Images/msix-hero-64.png" Width="48" Height="48" HorizontalAlignment="Center" />
        <TextBlock Text="{Binding RelativeSource={RelativeSource Mode=FindAncestor, AncestorType=UserControl}, Path=Tag}" Margin="0 10 0 0" TextAlignment="Center" />
    </StackPanel>
</UserControl>
