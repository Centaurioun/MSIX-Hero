  </PropertyGroup>

  <ItemGroup>
    <None Remove="Modules\Settings\View\Images\no-sidebar.png" />
    <None Remove="Modules\Settings\View\Images\sidebar.png" />
    <None Remove="Resources\Images\msix-hero-64-1.png" />
    <None Remove="Resources\Images\msix-hero-64-dark.png" />
    <None Remove="Resources\Images\msix-hero-64.png" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="Fluent.Ribbon" Version="7.0.1" />
    <PackageReference Include="MiqM.Xceed.Wpf.Toolkit.NETCore" Version="3.4.0.1" />
    <PackageReference Include="Ookii.Dialogs.Wpf.NETCore" Version="2.0.0" />
    <PackageReference Include="Prism.Core" Version="7.2.0.1422" />
    <PackageReference Include="Prism.Unity" Version="7.2.0.1422" />
    <PackageReference Include="Prism.Wpf" Version="7.2.0.1422" />
    <PackageReference Include="System.Management.Automation" Version="7.0.0-rc.1" />
  </ItemGroup>

  <ItemGroup>
