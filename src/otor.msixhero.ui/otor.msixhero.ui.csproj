    <Compile Update="Modules\Main\View\BackStageOpenView.xaml.cs">
      <SubType>Code</SubType>
    </Compile>
    <Compile Update="Modules\PackageList\View\MultiSelectionView.xaml.cs">
      <SubType>Code</SubType>
    </Compile>
