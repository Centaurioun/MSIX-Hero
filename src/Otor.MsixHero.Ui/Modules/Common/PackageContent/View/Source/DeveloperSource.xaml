<UserControl x:Class="Otor.MsixHero.Ui.Modules.Common.PackageContent.View.Source.DeveloperSource"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             x:Name="Root"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <StackPanel Margin="0 0 0 0">
        <TextBlock Style="{StaticResource DataHeader}" Text="Installed from" />
        <TextBlock Style="{StaticResource DataValue}" Text="Manifest file (developer mode)" TextWrapping="Wrap" Margin="0 0 0 10" />

        <TextBlock Visibility="Collapsed" Style="{StaticResource DataHeader}" Text="Manifest path" />
        <TextBlock Visibility="Collapsed" Style="{StaticResource DataValue}" TextWrapping="Wrap" Margin="0 0 0 10">
            <Hyperlink Click="LinkClicked" Tag="{Binding ElementName=Root, Path=ManifestFilePath}">
                <Run Text="{Binding ElementName=Root, Path=ManifestFilePath, Mode=OneWay}" />
            </Hyperlink>
        </TextBlock>
    </StackPanel>
</UserControl>
